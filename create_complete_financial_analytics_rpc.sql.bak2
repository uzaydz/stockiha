    -- ğŸ—‚ï¸ 14. Ø¥Ù†Ø´Ø§Ø¡ ØªÙØ§ØµÙŠÙ„ JSON
    v_detailed_breakdown := jsonb_build_object(
        'sales_breakdown', jsonb_build_object(
