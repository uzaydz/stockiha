# ðŸ”’ Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or any file containing real secrets!

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# âš¡ PowerSync Configuration
# PowerSync Backend URL - Get this from your PowerSync Dashboard
# Format: https://your-instance.powersync.com
VITE_POWERSYNC_URL=https://your-powersync-instance.powersync.com

# Development Settings
NODE_ENV=development
VITE_NODE_ENV=development

# Domain Settings
VITE_APP_DOMAIN=yourdomain.com
VITE_SUPPORTED_DOMAINS=yourdomain.com,localhost

# API Settings
VITE_API_URL=/api
VITE_DOMAIN_PROXY=your-proxy-domain.com

# Deployment Platform
VITE_DEPLOYMENT_PLATFORM=local

# Security Settings
VITE_DISABLE_CSP=false

# AI Assistant Configuration (SIRA)
# OpenRouter API Key for Grok-4-Fast (intent detection & responses)
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI API Key for Voice Features (Whisper STT & TTS)
# Get your key from: https://platform.openai.com/api-keys
# Note: This is required for voice input/output features
# Cost: ~$0.006/min for Whisper, ~$0.015/1k chars for TTS
VITE_OPENAI_API_KEY=your_openai_api_key_here

